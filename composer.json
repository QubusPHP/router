{
    "name": "qubus/router",
    "type": "library",
    "description": "Qubus Router is a powerful and fast PHP router for PSR-7/PSR-15 messages.",
    "keywords": [
        "router",
        "url routing",
        "routing",
        "PSR-7",
        "PSR-15"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "josh@joshuaparker.blog"
        }
    ],
    "require": {
        "php": ">=8.1",
        "php-di/invoker": "^2.2",
        "qubus/http": "^2.0",
        "qubus/injector": "^2.2",
        "relay/relay": "^2.1",
        "spatie/macroable": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.0",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.3.1"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Routing\\": ""
        },
        "files": [
            "Helpers/core.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Qubus\\Tests\\Routing\\": "Tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "security-checker": "./vendor/bin/security-checker security:check composer.lock"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
