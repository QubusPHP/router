{
    "name": "qubus/router",
    "type": "library",
    "description": "Qubus Router is a powerful and fast PHP router for PSR-7/PSR-15 messages.",
    "keywords": ["router","url routing","routing","PSR-7","PSR-15"],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "josh@joshuaparker.blog"
        }
    ],
    "require": {
        "php": "^7.4",
        "laminas/laminas-diactoros": "^2.3",
        "laminas/laminas-httphandlerrunner": "^1.2",
        "php-di/invoker": "^2.0",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "qubus/exception": "^1.0",
        "relay/relay": "^2.1",
        "spatie/macroable": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.0",
        "mockery/mockery": "^1.3.1",
        "php-coveralls/php-coveralls": "^1.0",
        "php-di/php-di": "^6.2",
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.3.1"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Router\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        "Qubus\\Router\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}
